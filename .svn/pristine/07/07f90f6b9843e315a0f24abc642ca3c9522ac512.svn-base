@import url('https://fonts.googleapis.com/css2?family=Pixelify+Sans:wght@400;700&display=swap');

body {
    font-family: 'Pixelify Sans', sans-serif;
    background-image: url("#{resource['images/space.png']}");
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
    background-position: center;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    margin: 0;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 20px;
    padding-top: 100px;
}

.container {
    position: relative;
    width: 600px;
    height: 1200px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

h:form#inputForm {
    position: absolute;
    top: 0;
    z-index: 1;
    width: 100%;
    height: 600px;
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.3);
    border-radius: 12px;
    padding: 20px;
    overflow-y: auto;
}

h:dataTable#resultsTable {
    position: relative;
    top: 620px;
    width: 100%;
    height: 600px;
    overflow-y: auto;
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.3);
    border-radius: 12px;
    padding: 20px;
}


canvas#plotCanvas {
    width: 600px;
    height: 600px;
    backdrop-filter: blur(10px);
    background: rgba(255, 255, 255, 0.3);
    border-radius: 12px;
}

header {
    display: flex;
    justify-content: space-between;
    padding: 20px;
    backdrop-filter: blur(5px);
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
}

header .greeting {
    font-size: 1.5em;
    font-weight: bold;
}

header .header-buttons .header-btn {
    background: rgba(255, 255, 255, 0.2);
    color: #fff;
    padding: 10px;
    margin-left: 10px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
}

.coords-input {
    width: 80px;
    padding: 5px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.8);
}

.submit-btn,
.remove-all-btn {
    width: 100px;
    padding: 10px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    background: rgba(0, 128, 0, 0.7);
    color: white;
    margin: 10px;
}

.submit-btn:hover,
.remove-all-btn:hover {
    background: rgba(0, 128, 0, 0.9);
}

.results-table {
    width: 100%;
    text-align: left;
    border-collapse: collapse;
    margin-top: 20px;
}

.results-table th, .results-table td {
    padding: 8px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.error-message {
    color: red;
    font-size: 0.8em;
}
